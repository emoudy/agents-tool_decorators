# Flake8 configuration
[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    dist,
    build
ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
